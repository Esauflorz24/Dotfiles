}

window {
    width : 700;
    orientation: horizontal;
    location: center;
    border-radius: 6px;
    spacing : 0;
    anchor: center;
}

listview{
    columns:1;
    lines:9;


}

inputbar{

    children : ["prompt","entry"];
    spacing : 10px;
}

mainbox{
    spacing : 10px;
